@page "/recordings"

@rendermode InteractiveServer

@using Recordings.Shared.DTOs
@inject ILogger<RecordingsDashboard> Logger

<PageTitle>Recordings</PageTitle>

<div class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col-3">
            <DateSelector OnDateSelected="HandleDateSelected"/>
        </div>
        <div class="col-9">
            <div>
                <AudioPlayer Track="@SelectedTrack"/>
            </div>
            <div style="margin-top: 10px;">
                <Playlist Date="@SelectedDate" OnTrackSelected="HandleTrackSelected"/>
            </div>
        </div>
    </div>
</div>

@code {

    private string SelectedDate { get; set; } = "0000-00-00";
    private RecordingDto? SelectedTrack { get; set; }

    private void HandleDateSelected(string date)
    {
        // Logger.LogInformation("HandleDateChange: " + date);
        SelectedDate = date;
        StateHasChanged();
    }

    private void HandleTrackSelected(RecordingDto track)
    {
        // Logger.LogInformation($"HandleTrackSelected: {track.Title}");
        SelectedTrack = track;
        StateHasChanged();
    }
}
